<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:drawableTop="@drawable/wechat"
        android:drawablePadding="@dimen/activity_title_img_padding"
        android:text="@string/app_name"
        android:textSize="@dimen/activity_title_size"
        android:textColor="@color/titleColor"/>


    <Button android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/btn_bg_color"
        android:padding="@dimen/activity_btn_start_padding"
        android:layout_marginBottom="@dimen/activity_btn_start_padding"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:textSize="@dimen/activity_btn_text_size"
        android:text="@string/btn_start_text"
        android:textColor="@color/btn_text_color"/>

</RelativeLayout>
